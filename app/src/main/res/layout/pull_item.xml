<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/pull_item_cardview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pull_item_titulo_pull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Titulo Pull"
                app:layout_constraintBottom_toTopOf="@+id/pull_item_body"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/pull_item_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Body"
                app:layout_constraintLeft_toLeftOf="@id/pull_item_titulo_pull"
                app:layout_constraintTop_toBottomOf="@id/pull_item_titulo_pull" />

            <TextView
                android:id="@+id/pull_item_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data"
                app:layout_constraintTop_toBottomOf="@id/pull_item_body"
                app:layout_constraintStart_toStartOf="@id/pull_item_body"
                />


            <ImageView
                android:id="@+id/pull_item_user_image"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_user_placeholder"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@id/pull_item_data"
                app:layout_constraintLeft_toLeftOf="@id/pull_item_data"/>

            <TextView
                android:id="@+id/pull_item_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                app:layout_constraintTop_toBottomOf="@id/pull_item_user_image"
                app:layout_constraintEnd_toEndOf="@id/pull_item_user_image"/>

            <TextView
                android:id="@+id/pull_item_namesurname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome Sobrenome"
                app:layout_constraintTop_toBottomOf="@id/pull_item_username"
                app:layout_constraintEnd_toEndOf="@id/pull_item_username"/>

        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
